<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shortcut_parent"
    android:background="@drawable/shape"
    android:elevation="20dp"
    android:clickable="true"
    style="@style/Widget.AppCompat.Button.Colored">

    <View android:layout_width="30dp"
        android:layout_height="35dp"
        android:background="@drawable/circle"
        android:layout_gravity="start|center_vertical"
        android:layout_centerVertical="true" />

    <ImageView
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/shortcut_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start|center_vertical"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/shortcut_text"
        android:paddingStart="14dp"
        android:paddingLeft="14dp"
        android:layout_toEndOf="@+id/shortcut_image"
        android:layout_toRightOf="@+id/shortcut_image"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        android:maxLines="1"
        android:text="Force Touch"/>

    <ImageView
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/shortcut_options"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp" />

